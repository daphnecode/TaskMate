rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users/{uid} 및 모든 하위 컬렉션
    match /Users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 공용 아이템
    match /Items/{itemId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
